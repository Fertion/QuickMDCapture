<resources>
    <!-- Base application theme. -->
    <style name="Theme.QuickMDCapture" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="DialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="DialogButton.Save" parent="DialogButton">
        <item name="android:backgroundTint">@color/green</item>
    </style>
    <style name="DialogButton.Cancel" parent="DialogButton">
        <item name="android:backgroundTint">@color/red</item>
    </style>
    <style name="NotificationButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NotificationButton.Left">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:background">@drawable/notification_button_left_background</item>
    </style>

    <style name="NotificationButton.Right">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">@drawable/notification_button_right_background</item>
    </style>
</resources>